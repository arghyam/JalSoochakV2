#!/usr/bin/env sh

# Only run lint-staged if there are changes in the frontend folder
if git diff --cached --name-only --diff-filter=ACM | grep -q "^frontend/"; then
  echo "ğŸ” Husky: Detected frontend changes, running lint-staged..."
  cd frontend && npx lint-staged
  echo "âœ… Husky: Pre-commit checks completed"
else
  echo "â„¹ï¸  Husky: No frontend files changed, skipping pre-commit checks"
fi

